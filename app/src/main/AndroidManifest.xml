<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="net.davtyan.playKODI">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:fullBackupContent="@xml/mybackupscheme"
        android:icon="@mipmap/ic_launcher_2"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_2_round"
        android:supportsRtl="true"
        android:usesCleartextTraffic="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        tools:targetApi="s">
        <activity
            android:name="MyActivity"
            android:launchMode="singleTask"
            android:theme="@style/splashScreenTheme"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Settings"
            android:launchMode="singleTask"
            android:label="@string/activitySettings"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data
                    android:host="playkodi.davtyan.net"
                    android:pathPrefix="/schedule"
                    android:scheme="http" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Hosts"
            android:launchMode="singleTask"
            android:label="Hosts"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data
                    android:host="playkodi.davtyan.net"
                    android:pathPrefix="/schedule"
                    android:scheme="http" />
            </intent-filter>
        </activity>
        <activity
            android:name=".HostEditor"
            android:launchMode="singleTask"
            android:label="KODI Host"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data
                    android:host="playkodi.davtyan.net"
                    android:pathPrefix="/schedule"
                    android:scheme="http" />
            </intent-filter>
        </activity>
        <activity
            android:name=".HostsListDialog"
            android:launchMode="singleTask"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data
                    android:host="playkodi.davtyan.net"
                    android:pathPrefix="/schedule"
                    android:scheme="http" />
            </intent-filter>
        </activity>
        <activity
            android:name=".About"
            android:launchMode="singleTask"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data
                    android:host="playkodi.davtyan.net"
                    android:pathPrefix="/schedule"
                    android:scheme="http" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SendFormPlay"
            android:launchMode="singleTask"
            android:label="@string/activitySendPlay"
            android:theme="@style/Theme.Transparent"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data android:scheme="http" />
                <data android:scheme="https" />
                <data android:scheme="smb" />
                <data android:scheme="content" />
                <data android:mimeType="video/mpeg" />
                <data android:mimeType="video/mp4" />
                <data android:mimeType="video/avi" />
                <data android:mimeType="video/quicktime" />
                <data android:mimeType="video/*" />
                <data android:mimeType="audio/*" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SendFormPlayYoutube"
            android:launchMode="singleTask"
            android:label="@string/activitySendPlayYoutube"
            android:theme="@style/Theme.Transparent"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.SEND" />
                <category android:name="android.intent.category.DEFAULT" />
                <data android:mimeType="text/plain" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data android:scheme="http" />
                <data android:scheme="https" />
                <data android:host="youtube.com" />
                <data android:host="www.youtube.com" />
                <data android:host="m.youtube.com" />
                <data android:host="youtu.be" />
                <data android:pathPattern=".*" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SendFormQueue"
            android:launchMode="singleTask"
            android:label="@string/activitySendQueue"
            android:theme="@style/Theme.Transparent"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data android:scheme="http" />
                <data android:scheme="https" />
                <data android:scheme="smb" />
                <data android:scheme="content" />
                <data android:mimeType="video/mpeg" />
                <data android:mimeType="video/mp4" />
                <data android:mimeType="video/avi" />
                <data android:mimeType="video/quicktime" />
                <data android:mimeType="video/*" />
                <data android:mimeType="audio/*" />
            </intent-filter>
        </activity>
    </application>
</manifest>